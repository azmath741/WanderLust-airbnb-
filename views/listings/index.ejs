<% layout('/layouts/boilerplate.ejs')-%>

  <body>
    <h3>All Listings</h3>
    <!-- <form method="get" action="/allListings/new">
      <button>add</button>
    </form> -->
    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
      <% for(let listing of listings) {%>
        <a href="/allListings/<%=listing._id%>" class="listing-link">
          <div class="card"">
          <img src=" <%=listing.image%>" class="card-img-top" style="height:20rem;" alt="listing_image">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%= listing.title %>
                </b><br>
                <span>&#8377;<%= listing.price ? Number(listing.price).toLocaleString("en-IN") : "N/A" %>/night</span>
              </p>
            </div>
          </div>
        </a>
        <% }%>
    </div>
  </body>