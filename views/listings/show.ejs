<% layout('/layouts/boilerplate.ejs')-%>

  <body>
    <div class="row">
      <div class="col-7 offset-3">
        <div class="card col-7 offset-2">
          <h2>Listing details:</h2>
          <img src="<%=listing.image%>" class="show-img card-img-top" alt="Listing_Image">
          <div class="card-body">
            <p class="card-text">
              <%=listing.title%><br><br>
                <%=listing.description%><br><br>
                  &#8377;<%=listing.price.toLocaleString("en-IN")%><br><br>
                    <%=listing.location%><br><br><%=listing.country%><br><br>
            </p>
            <div class="btns">
              <form method="get" action="/allListings/<%= listing._id %>/edit">
                <button class="btn update-btn">EDIT</button>
              </form>
              <form method="post" action="/allListings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark">DELETE</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>